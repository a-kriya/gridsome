{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "--experimental-vm-modules",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--testTimeout=100000000",
        "${fileBasename}"
      ],
      "env": {
        "GRIDSOME_TEST": "unit",
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
